// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int        @id @default(autoincrement())
  email     String     @unique
  username  String
  password  String
  playlists Playlist[]

  @@map("user")
}

model Playlist {
  id     Int     @id @default(autoincrement())
  name   String
  user   User    @relation(fields: [userId], references: [id])
  userId Int
  musics Music[]

  @@map("playlist")
}

model Music {
  id        Int        @id @default(autoincrement())
  name      String
  url       String
  artist    Artist     @relation(fields: [artistId], references: [id])
  artistId  Int
  playlists Playlist[]

  @@map("music")
}

model Artist {
  id     Int     @id @default(autoincrement())
  name   String
  musics Music[]

  @@map("artist")
}
